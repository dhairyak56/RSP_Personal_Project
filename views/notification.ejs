<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Send Notification - CauseConnect</title>
    <link rel="stylesheet" href="/css/notification.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    <header>
        <%- include('header') %>
    </header>
    <main class="notification-container">
        <h2>Send Notification</h2>
        <% if (messages.success && messages.success.length > 0) { %>
            <div class="flash-message success">
                <%= messages.success.join('<br>') %>
            </div>
        <% } %>
        <% if (messages.error && messages.error.length > 0) { %>
            <div class="flash-message error">
                <%= messages.error.join('<br>') %>
            </div>
        <% } %>

        <form action="/notification" method="POST">
            <div class="form-group">
                <label for="eventId">Select Event:</label>
                <select id="eventId" name="eventId" required>
                    <% events.forEach(event => { %>
                        <option value="<%= event.id %>"><%= event.name %> - <%= event.location_name %> on <%= new Date(event.date).toLocaleDateString() %></option>
                    <% }) %>
                </select>
            </div>
            <div class="form-group">
                <label for="subject">Subject:</label>
                <input type="text" id="subject" name="subject" placeholder="Enter subject" required>
            </div>
            <div class="form-group">
                <label for="message">Message:</label>
                <textarea id="message" name="message" placeholder="Enter your message" required></textarea>
            </div>
            <button type="submit" class="send-button">Send</button>
        </form>
    </main>
    <footer>
        <%- include('footer') %>
    </footer>
</body>
</html>
